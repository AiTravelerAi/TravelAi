# Node environment
NODE_ENV=development
PORT=8080

# Database (Postgres via Prisma)
DATABASE_URL=postgresql://USER:PASSWORD@localhost:5432/timetravelerai

# Storage: local or S3
STORAGE_MODE=local          # local | s3

# If STORAGE_MODE=s3, fill these in:
S3_BUCKET=your-s3-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_access_key_id
S3_SECRET_ACCESS_KEY=your_secret_access_key

# ML Outputs path (where signals.json comes from)
ML_OUTPUTS_PATH=../services/ml/outputs

# Cron job settings (for Temporal Signal Drops)
CRON_TZ=Europe/Ljubljana
CRON_WEEKLY_DOW=6            # 0=Sunday, 6=Saturday
CRON_WEEKLY_HOUR=12          # 24h format, e.g. 12 = noon

# Logging
LOG_LEVEL=info               # debug | info | warn | error

# Security
CORS_ORIGIN=http://localhost:3000   # frontend Next.js URL
API_KEY=changeme-for-internal-calls # optional internal auth
